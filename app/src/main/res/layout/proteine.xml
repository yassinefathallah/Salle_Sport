<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/proteine"
    android:padding="16dp">


    <TextView
        android:textColor="#C68989"
        android:textSize="20sp"
        android:id="@+id/weightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your weight (kg):" />

    <EditText
        android:id="@+id/weightInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#C68989"
        android:textSize="20sp"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/activityLevelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#C68989"
        android:textSize="20sp"
        android:text="Select your activity level:" />

    <RadioGroup
        android:id="@+id/activityLevelGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textColor="#C68989"
        android:textSize="20sp">

        <RadioButton
            android:id="@+id/sedentaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sedentary"
            android:textColor="#C68989"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/lightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#C68989"
            android:textSize="20sp"
            android:text="Light activity (1-3 days per week)" />

        <RadioButton
            android:id="@+id/moderateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#C68989"
            android:textSize="20sp"
            android:text="Moderate activity (3-5 days per week)" />

        <RadioButton
            android:id="@+id/heavyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#C68989"
            android:textSize="20sp"
            android:text="Heavy activity (6-7 days per week)" />

        <RadioButton
            android:id="@+id/veryHeavyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#C68989"
            android:textSize="20sp"
            android:text="Very heavy activity (twice per day, extra heavy workouts)" />

    </RadioGroup>

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#7A3997"
        android:text="Calculate"
        android:textColor="#C68989"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
